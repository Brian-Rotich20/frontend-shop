{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
   "paths": {
    "@/*": ["./app/*"]
  }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx","app/context",".next/types/**/*.ts", "app/page.jsx", "app/(public)/layout.jsx", "app/products/[slug]/page.jsx", "app/layout.jsx", "app/admin/page.tsx"],
  "exclude": ["node_modules"]
}
